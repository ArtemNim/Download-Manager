<Page x:Class="DownloadManager.Pages.FirstDownloadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DownloadManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      Title="FirstDownloadPage" Width="340">

    <Grid>
        <TextBox x:Name="LinkTextBox" HorizontalAlignment="Left" Height="23" Margin="10,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="266"/>
        <Label x:Name="InfoLabel1" Content="Enter the link or choose torrent" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BrowseButton1" Content="..." HorizontalAlignment="Left" Margin="288,32,0,0" VerticalAlignment="Top" Width="28" Height="23" Click="BrowseTorrent_Click"/>
        <Button x:Name="OkDownloadButton1" Content="OK" HorizontalAlignment="Left" Margin="249,66,0,0" VerticalAlignment="Top" Width="47" Click="OkDownloadButton_Click"/>

    </Grid>
</Page>
